<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spudg.spudgmoneymanager">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SpudgMM">
        <activity
            android:name="com.spudg.spudgmoneymanager.AnalyticsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SpudgMM"/>
        <activity
            android:name="com.spudg.spudgmoneymanager.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spudg.spudgmoneymanager.CategoriesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SpudgMM" />
        <activity
            android:name="com.spudg.spudgmoneymanager.AccountsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SpudgMM" />
        <activity
            android:name="com.spudg.spudgmoneymanager.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SpudgMM" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>